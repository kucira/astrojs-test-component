---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import SolidComponent from '../components/SolidComponent.jsx';
import PreactComponent from '../components/PreactComponent.jsx';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<h1>🧑‍🚀 Hello, Astronaut!</h1>
			<SolidComponent message="solid component" client:only="solid-js" />
			<PreactComponent client:visible />
		</main>
		<Footer />
	</body>
</html>
